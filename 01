#include <stdio.h>
#include <stdlib.h>

int main() {
    char c;
    int result = 0;

    printf("input a string:\n ");
    
    while ((c = getchar()) != '\n') {
        if (c >= '0' && c <= '9') {
            result++;
        }
    }

    printf("the number of digits is : %d\n", result);

    return 0;
}
